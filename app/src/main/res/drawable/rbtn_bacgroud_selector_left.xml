<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="false">
        <shape>
            <!-- 渐变 -->
            <gradient android:endColor="#FFFFFF" android:gradientRadius="50" android:startColor="#ff8c00" android:type="radial"/>
            <!-- 描边 -->
            <stroke android:width="1px" android:color="@color/white"/>
            <!-- 圆角 -->
            <corners android:bottomLeftRadius="@dimen/value_8_px" android:topLeftRadius="@dimen/value_8_px"/>

            <solid android:color="@color/color_1e3c72"/>
            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp"/>
        </shape>
    </item>


    <item android:state_checked="true">
        <shape>
            <!-- 渐变 -->
            <gradient android:endColor="#FFFFFF" android:gradientRadius="50" android:startColor="#ff8c00" android:type="radial"/>
            <!-- 圆角 -->
            <corners android:bottomLeftRadius="@dimen/value_8_px" android:topLeftRadius="@dimen/value_8_px"/>

            <solid android:color="@color/color_white"/>
            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp"/>
        </shape>
    </item>


</selector>