<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:background="#44048e63"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_navigationview_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:src="@mipmap/security_zhongxin"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/tv_security_name"
        android:textColor="@color/color_1e3c72"
        android:layout_marginTop="@dimen/value_20_px"
        android:text="中信证券"
        android:textSize="25dp"/>
</LinearLayout>