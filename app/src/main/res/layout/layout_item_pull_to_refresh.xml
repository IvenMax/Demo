<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:padding="@dimen/value_24_px">

    <ImageView
        android:id="@+id/iv_pull_to_refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"
        android:visibility="gone"
        android:src="@mipmap/ic_launcher"
        />

    <TextView
        android:id="@+id/tv_pull_to_refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/value_24_px"
        android:layout_toRightOf="@id/iv_pull_to_refresh"
        android:gravity="center"
        android:text="1234566789"
        android:textColor="@color/color_1e3c72"
        android:textSize="20dp"
        />
</RelativeLayout>